    <input type="hidden" name="listName" value="<%=listTitle%>">
  </form>
         <% })%>
        
         <form action="/" method="post">
          <input type="text" name="item1"  placeholder="New item" required autocomplete="off">
         <button type="submit" name="list" value= <%= listTitle %>>+</button>
         </form>
  </div>

</body>

